	cblock
	madr,mscl
	srev,srew,sglo,srka
	srni,srnj
;vars
	aghi,aglo,agrk:2
	abey:2,asrx
	arbi
	atbi,arev
	endc

#ifdef M443	;D34-W24-H3(BassOne pla-spool)
#define	OMEGASOUND
Adata macro
	org	0x2100+48
	de	6,200,180,160
	de	0,0,0,0
	de	100,140,80,60
	de	60,80,0,0
	de	255,255,150,100	;brake table
	de	70,50,40,30
	endm
#endif
